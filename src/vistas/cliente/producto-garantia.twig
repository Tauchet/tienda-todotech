{% extends "base.twig" %}

{% block title %}Garantía de Producto{% endblock %}
{% block metadata %}
    <link rel="stylesheet" href="{{ url("/public/assets/producto-editor/estilos.css") }}">
{% endblock %}

{% block content %}

    {% include "componentes/menu.twig" %}

    <div class="contenido">
        {% if completado %}
            <div class="resultado">
                <div class="resultado-icon">
                    <p><i class="fas fa-check-circle fa-8x"></i></p>
                </div>
                <div class="resultado-contenido">
                    <h2>¡Petición enviada!</h2>
                    <p>La solicitud de garantía fue enviada con éxito</p>
                </div>
                <div class="resultado-opciones">
                    <a href="{{ url("/") }}" class="btn info">Volver al inicio</a>
                </div>
            </div>
        {% else %}
            {% if (error) %}
                <div class="alerta">
                    <div class="alerta-header">
                        <h3>¡ERROR!</h3>
                    </div>
                    <div class="alerta-content">
                        <p>{{ error }}</p>
                    </div>
                </div>
            {% endif %}
            <form method="post">
                <div class="form-group">
                    <div class="input-custom">
                        <label class="input-custom__label" for="nombre">Código</label>
                        <div class="input-custom__contenido">
                            <div class="input-custom__icono">
                                <i class="fas fa-tag"></i>
                            </div>
                            <input minlength="10" value="{{ codigo }}" type="text" name="codigo" id="codigo" placeholder="Ingresa el código del producto" required>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="input-custom">
                        <label class="input-custom__label" for="descripcion">Problema</label>
                        <div class="input-custom__contenido">
                            <div class="input-custom__icono">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <select name="problema" id="problema" required>
                                <option value="El dispositivo dejó de funcionar">El dispositivo dejo de funcionar</option>
                                <option value="El dispositivo tiene desperfectos en el acabado">El dispositivo tiene desperfectos en el acabado</option>
                                <option value="No me llegó el producto esperado">No me llegó el producto esperado</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-custom">
                        <label class="input-custom__label" for="descripcion">Descripción</label>
                        <div class="input-custom__contenido">
                            <div class="input-custom__icono">
                                <i class="fas fa-scroll"></i>
                            </div>
                            <textarea minlength="10" rows="4" value="{{ descripcion }}" type="text" name="descripcion" id="descripcion" placeholder="Cuentanos el motivo de solicitar la garantía" required></textarea>
                        </div>
                    </div>
                </div>

            </form>
        {% endif %}
    </div>

{% endblock %}